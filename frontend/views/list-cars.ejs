<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../views/head')%>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" href="list-cars.css">
</head>
<style>
    body {
        background-color: #E5E5E5;
        height: 100vh;
    }

    .background-truck {
        background: rgba(255, 255, 255, 0.3);
    }
</style>

<body id="body-pd" class="">
    <%- include('sidebar')-%>
    <div class="main-content" style="padding-top:102px;">
        <div class="row row-cols-auto justify-content-between d-flex">
            <div class="b-left col">
                <div class="link-nav">
                    <a href="#" class="link-nav-car">Cars</a>
                    <img src="img/Vector-right.png" alt="" class="vactor-right">
                    <a href="#" class="link-nav-list-car">List Car</a>
                </div>
                <h1 class="title">List Car</h1>
                <div class="button">
                    <a href="/" style="float:left ;"><button class="button-size">All</button></a>
                    <form action="/size" method="get" style="float:left ;">
                        <button class=" button-size btn primary " type="submit" name="size" value="Small"> Small</button>
                        <button class=" button-size btn primary" type="submit" name="size" value="Medium">Medium</button>
                        <button class=" button-size  btn primary" type="submit" name="size" value="Large">Large</button>
                    </form>
                </div>
            </div>
            <div class="b-right col">
                <a href="/car-add" class=" text-decoration-none"><button class="button-add"><img
                            src="img/Vector-plus.png" alt=""> Add New Car</button></a>
            </div>
        </div>

        <div class="row row-cols-auto justify-content-start mt-5">
            <% data.forEach(element=> { %>
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <img src="<%= element.image %>" class="card-img-top img-card" alt="">
                    <div class="card-body">
                        <h5 class="card-title">Mobil : <%= element.name %></h5>
                        <h2 class="price">Price : Rp. <%= element.price %>,00- / Hari</h2>
                        <h2 class="price">Size :<%= element.size %></h2>
                        <p class="card-text"><img src="img/fi_clock.png" alt="" class="me-1"><%= element.updatedAt %>
                        </p>
                        <div class="row">
                            <div class="col ">
                                <button class="b-option bl" type="button" data-bs-toggle="modal"
                                    data-bs-target="#exampleModal<%= element.id %>">
                                    <i class="fa fa-trash"> Delete</i>
                                </button>
                            </div>
                            <div class="col ">
                                <a href="/car-update/<%= element.id %>" class="bl"><button
                                        class="b-option btn btn-success edt"><i class="fa fa-edit">
                                            Edit</i></button></a></div>
                        </div>
                    </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal<%= element.id %>" tabindex="-1"
                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header border-bottom-0 p-0">
                                <img src="img/img-BeepBeep.png" alt="" class="modal-image">
                            </div>
                            <div class="modal-body p-0">
                                <h1 class="modal-title">Menghapus Data Mobil</h1>
                                <p class="modal-general">Setelah dihapus, data mobil tidak dapat dikembalikan.
                                    Yakin ingin menghapus?</p>
                            </div>
                            <div class="modal-footer border-top-0 p-0">
                                <a href="/delete/<%= element.id %>"><button type="button" class="btn btn-primary modal-button-ya">Ya</button></a>
                                <button type="button" class="btn btn-secondary modal-button-ya no"
                                    data-bs-dismiss="modal">Tidak</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    </div>
</body>

</html>